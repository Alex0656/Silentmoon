<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sleep_back">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".signing.SleepMusicV2Activity">

        <ImageView
            android:id="@+id/music_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_sleep_music_v2"
            android:scaleType="center"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ic_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

            android:layout_marginTop="50dp"
            android:onClick="onClickGoBack"
            android:src="@drawable/ic_button_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ic_sleep_music_v2_2_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"

            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_sleep_music_v2_2_"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ic_sleep_music_v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"

            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_sleep_music_v2"
            app:layout_constraintEnd_toStartOf="@+id/ic_sleep_music_v2_2_"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:id="@+id/night_island_2"
            style="@style/sleep_style"
            android:textSize="34sp"
            android:text="@string/night_island"

            android:layout_marginTop="280dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ic_sleep_music_v2" />

        <TextView
            android:id="@+id/sleep_music_big"
            style="@style/neue"
            android:textColor="@color/sleep_color_45"
            android:text="@string/sleep_music_big"

            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/night_island_2" />


        <ImageView
            android:id="@+id/img_music_bar_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="160dp"
            android:layout_marginTop="70dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/img_sleep_music_v2_play"

            app:layout_constraintTop_toBottomOf="@+id/sleep_music_big"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
