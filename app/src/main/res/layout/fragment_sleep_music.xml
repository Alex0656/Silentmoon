<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sleep_back">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".signing.sleep_music.SleepMusicFragment">

        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            android:src="@drawable/img_back_button"

            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sleep_music"
            style="@style/sleep_style"
            android:textSize="24sp"
            android:layout_marginTop="64dp"
            android:text="@string/sleep_music"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sleep_music">

            <ImageView
                android:id="@+id/img_sleep_001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_sleep_001"
                android:layout_marginEnd="20dp"

                app:layout_constraintEnd_toStartOf="@+id/img_sleep_002"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_sleep_002"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_sleep_002"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/img_sleep_001"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/img_sleep_003"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"

                android:src="@drawable/img_sleep_003"
                app:layout_constraintEnd_toStartOf="@+id/img_sleep_004"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_sleep_001" />

            <ImageView
                android:id="@+id/img_sleep_004"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:src="@drawable/img_sleep_004"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/img_sleep_003"
                app:layout_constraintTop_toBottomOf="@+id/img_sleep_002" />

            <ImageView
                android:id="@+id/img_sleep_005"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:src="@drawable/img_sleep_005"
                android:layout_marginEnd="20dp"

                app:layout_constraintEnd_toStartOf="@+id/img_sleep_006"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_sleep_003" />

            <ImageView
                android:id="@+id/img_sleep_006"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/img_sleep_006"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/img_sleep_005"
                app:layout_constraintTop_toBottomOf="@+id/img_sleep_004" />

            <ImageView
                android:id="@+id/img_sleep_007"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/img_sleep_007"
                android:layout_marginEnd="20dp"

                app:layout_constraintEnd_toStartOf="@+id/img_sleep_008"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_sleep_005" />

            <ImageView
                android:id="@+id/img_sleep_008"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/img_sleep_008"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/img_sleep_007"
                app:layout_constraintTop_toBottomOf="@+id/img_sleep_006" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>