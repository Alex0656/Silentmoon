<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">helvetica_neue_cyr_medium</item>
        <item name="android:color">@color/my_black</item>
    </style>




    <style name="Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="cornerRadius">38dp</item>
        <item name="backgroundTint">@color/my_purple</item>
        <item name="android:textColor">@color/button_color_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_cyr_medium</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="welcome_Button" parent="Button">
        <item name="android:textColor">@color/my_black</item>
        <item name="backgroundTint">@color/explore_the_app</item>
    </style>
    <style name="Button.Ghost">
        <item name="backgroundTint">#00000000</item>
        <item name="android:textColor">@color/my_black</item>
    </style>


    <style name="Span_link" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">.05</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="roboto_reg_16">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
